// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String  @unique
  password String
  name  String?
  createdEmployee Employee[]
}
model Employee{
  id    String @id @default(uuid())
  firstName String
  lastName String
  age String
  adress String
  createMaterial Material[]
  user User @relation(fields: [userId],references: [id])
  userId String
}
model Material {
  id    String @id @default(uuid())
  name  String?
  data String
  materialToEmployee    Employee    @relation(fields: [employeeId], references: [id])
  employeeId  String

}
